<%= form_with(model: @event, local: true, class: 'form') do |form| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name,class: 'form-label' %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :location,class: 'form-label' %>
    <%= form.text_field :location, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :date_time,class: 'form-label' %>
    <%= form.datetime_local_field :date_time, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :total_tickets,class: 'form-label' %>
    <%= form.number_field :total_tickets, class: "form-control" %>
  </div>

  <div class="actions my-2">
    <%= form.submit class: "btn btn-dark" %>
  </div>
<% end %>