<div class="d-flex justify-content-between align-items-center">
    <h2 class="d-inline">All Events</h2>
    <%= link_to "Create Event", new_event_path, class: "btn btn-primary ms-auto d-inline" %>
</div>
<% unless @events.blank? %>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>location</th>
                <th>Total Ticket</th>
                <th>Available Ticket</th>
                <th>Date time</th>
                <th>Action</th>
                <th>Booked Tickets</th>
            </tr>
        </thead>
        <tbody>
            <%= render @events %>
        </tbody>
    </table>
<% else %>
    <h5 class="text-center">No Events Available Yet</h5>
<% end %>

<% if user_signed_in? %>
    <h3>My Booked Tickets</h3>
    <%= render "booking_list", my_booked_events: @my_booked_tickets %>
<% end %>
